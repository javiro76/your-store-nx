# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Customers Database Configuration
CUSTOMERS_DB_USER=customers_user
CUSTOMERS_DB_PASSWORD=secure_customers_password
CUSTOMERS_DB_NAME=customers_db
CUSTOMERS_DATABASE_URL=postgresql://${CUSTOMERS_DB_USER}:${CUSTOMERS_DB_PASSWORD}@customers-db:5432/${CUSTOMERS_DB_NAME}

# Products Database Configuration
PRODUCTS_DB_USER=products_user
PRODUCTS_DB_PASSWORD=secure_products_password
PRODUCTS_DB_NAME=products_db
PRODUCTS_DATABASE_URL=postgresql://${PRODUCTS_DB_USER}:${PRODUCTS_DB_PASSWORD}@products-db:5432/${PRODUCTS_DB_NAME}

# SSL Configuration (optional)
# SSL_CERT_PATH=/path/to/ssl/cert
# SSL_KEY_PATH=/path/to/ssl/key
